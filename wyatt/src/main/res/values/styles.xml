<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:windowNoTitle">true</item> -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="WyattProgressActionBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_actionbar</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
        
    </style>
   
    <style name="IndeterminateProgress" parent="@style/WyattProgressActionBar" />

    <style name="MySherockTheme" parent="android:Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyHomeSherockTheme" parent="android:Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 标题栏的样式 -->
    <style name="Widget.Wyatt.ActionBar" parent="android:Widget">
        <item name="android:background">@drawable/bg_title_bar</item>
        <item name="android:backgroundStacked">@drawable/bg_title_bar</item>
        <item name="android:backgroundSplit">@drawable/bg_title_bar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
    </style>

    <!-- 标题栏的标题样式 -->
    <style name="Widget.Wyatt.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:textColor">@color/wt_menu_text_gray</item>
    </style>

    <style name="CenterSizeDarkGreyTextStyle">
        <item name="android:textSize">@dimen/text_commen_size</item>
        <item name="android:textColor">@color/text_heavygrey</item>
    </style>

    <style name="TitleAndContentTextStyle">
        <item name="android:textSize">@dimen/text_commen_size</item>
        <item name="android:textColor">@color/text_titleandcontent</item>
    </style>

    <style name="TipsOrModerateTextStyle">
        <item name="android:textSize">@dimen/text_tips_size</item>
        <item name="android:textColor">@color/text_moderate</item>
    </style>

    <style name="LoginLoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 注册登录按钮 -->
    <style name="RedButton">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:textSize">@dimen/button_textsize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
    </style>

</resources>